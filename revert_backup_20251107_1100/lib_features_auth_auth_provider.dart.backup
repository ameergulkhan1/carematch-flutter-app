import 'package:flutter/foundation.dart';
import 'package:firebase_auth/firebase_auth.dart';
import '../core/services/firebase_service.dart';
import '../features/shared/models/user_model.dart';

class AuthProvider extends ChangeNotifier {
  final FirebaseService firebaseService;
  UserModel? _user;
  bool _isLoading = false;

  AuthProvider({required this.firebaseService});

  UserModel? get user => _user;
  bool get isLoading => _isLoading;

  Future<void> signIn(String email, String password) async {
    try {
      _isLoading = true;
      notifyListeners();

      final credential = await firebaseService.signInWithEmailAndPassword(
        email,
        password,
      );

      final userData = await firebaseService.getUserData(credential.user!.uid);
      _user = UserModel.fromMap(userData.data() as Map<String, dynamic>);
    } finally {
      _isLoading = false;
      notifyListeners();
    }
  }

  Future<void> signUp(String email, String password, String role) async {
    try {
      _isLoading = true;
      notifyListeners();

      final credential = await firebaseService.createUserWithEmailAndPassword(
        email,
        password,
      );

      final user = UserModel(
        uid: credential.user!.uid,
        email: email,
        role: role,
        createdAt: DateTime.now(),
      );

      await firebaseService.setUserData(user.uid, user.toMap());
      _user = user;
    } finally {
      _isLoading = false;
      notifyListeners();
    }
  }

  Future<void> signOut() async {
    try {
      _isLoading = true;
      notifyListeners();

      await firebaseService.signOut();
      _user = null;
    } finally {
      _isLoading = false;
      notifyListeners();
    }
  }
}
