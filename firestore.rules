rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Check if user is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ============================================
    // OTP CODES COLLECTION
    // ============================================
    match /otp_codes/{email} {
      allow read, write: if true;
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // Admin can read all users
      allow get, list: if isAdmin() || isAuthenticated();
      
      // Allow creating own user document
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Allow updates by owner or admin
      allow update: if isAdmin() || isOwner(userId);
      
      // Allow delete by owner or admin
      allow delete: if isAdmin() || isOwner(userId);
      
      // Onboarding subcollection
      match /onboarding/{document} {
        allow read, write: if isAdmin() || isOwner(userId);
      }
      
      // Document history subcollection
      match /document_history/{documentId} {
        allow read, write: if isAdmin() || isOwner(userId);
      }
    }
    
    // ============================================
    // CARETAKER PROFILES COLLECTION
    // ============================================
    match /caretaker_profiles/{profileId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // BOOKINGS COLLECTION
    // ============================================
    match /bookings/{bookingId} {
      allow read, list: if isAdmin() || isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // REVIEWS COLLECTION
    // ============================================
    match /reviews/{reviewId} {
      allow read, create: if true;
      allow update, delete: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // NOTIFICATIONS COLLECTION
    // ============================================
    match /notifications/{notificationId} {
      allow read, write: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // VERIFICATIONS COLLECTION
    // ============================================
    match /verifications/{verificationId} {
      allow read, write: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // VERIFICATION REQUESTS COLLECTION
    // ============================================
    match /verification_requests/{requestId} {
      // Admin has full access
      allow read, list, update, delete: if isAdmin();
      // Users can create and read their own requests
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
    }
    
    // ============================================
    // CHATS COLLECTION
    // ============================================
    match /chats/{chatId} {
      allow read, write: if isAdmin() || isAuthenticated();
      
      match /messages/{messageId} {
        allow read, write: if isAdmin() || isAuthenticated();
      }
    }
    
    // ============================================
    // CARE PLANS COLLECTION
    // ============================================
    match /care_plans/{planId} {
      allow read, write: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // PAYMENTS COLLECTION
    // ============================================
    match /payments/{paymentId} {
      allow read: if isAdmin() || isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // AVAILABILITY COLLECTION
    // ============================================
    match /availability/{availabilityId} {
      allow read: if true;
      allow create, update, delete: if isAdmin() || isAuthenticated();
    }
    
    // ============================================
    // STORED DOCUMENTS COLLECTION
    // ============================================
    match /stored_documents/{docId} {
      // Admin can read/write all documents
      allow read, write: if isAdmin();
      // Users can manage their own documents
      allow read, write: if isAuthenticated() && 
                          resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }
    
    // ============================================
    // AUDIT LOGS COLLECTION (Admin only)
    // ============================================
    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
